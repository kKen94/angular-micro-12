{
  "name": "angular-micro-12",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "lerna run start --stream",
    "build:dev": "lerna bootstrap && lerna run build:dev",
    "build:staging": "lerna bootstrap -- --production && lerna run build:staging",
    "build:prod": "lerna bootstrap -- --production && lerna run build:prod",
    "lint": "lerna run lint",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@commitlint/prompt": "^13.1.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "ng-packagr": "^12.2.1",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.21.0",
    "tsickle": "^0.43.0",
    "webpack-bundle-analyzer": "^4.4.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
